<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ExamenProgreso3.ViewModels"
             x:Class="ExamenProgreso3.Views.Pelicias"
             Title="Pelicias">
    <ContentPage.BindingContext>
        <local:PeliculasVIewModel/>
    </ContentPage.BindingContext>
    <VerticalStackLayout Spacing="20">
        <Image Source="dotnet_bot.png"
               HeightRequest="150"
               Aspect="AspectFill"
               SemanticProperties.Description="robot de dotnet."/>
        <Label
           Text="Titulo" />
        <Entry
            x:Name="TituloEntry"
            Placeholder="Ingrese el titulo"
            Text="{Binding Titulo}" />

        <Label
            Text="Genero" />
        <Entry
            x:Name="GeneroEntry"
            Placeholder="Ingrese el género"
            Text="{Binding Genero}" />

        <Label
            Text="Anio" />
        <Entry
            x:Name="AnioEntry"
            Placeholder="Ingrese el año"
            Text="{Binding Anio}" />
        
        <Label
            Text="Calficacion" />
        <Entry
            x:Name="CalificacionEntry"
            Placeholder="Ingrese la calificación"
            Text="{Binding Calificacion}" />

    </VerticalStackLayout>
</ContentPage>